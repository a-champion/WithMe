        <div class="subContainer">
            <div id="userLogin">
            
                <form action="/sessions" method="POST">
                    <div id="createUser">
                        <label for="username" class="sLabel"><b>Username</b></label>
                        <input type="text" placeholder="Enter Username" name="username" required class="sInput"><br/>
        
